@{
    ViewData["Title"] = "Quizzy Pop Home";
}

<section class="home-hero">
    <!-- Decorative curved title -->
    <svg class="arc-title" viewBox="0 0 900 280" aria-hidden="true" width="900" height="280">
        <defs>
            <!-- Adjusted curve to be perfectly centered -->
            <path id="titlePath" d="M50,220 C270,40 630,40 850,220" />
        </defs>
        <text class="arc-text" style="font-size: 2.2rem;">
            <textPath href="#titlePath" startOffset="50%" text-anchor="middle">
                WELCOME TO QUIZZY POP!
            </textPath>
        </text>
    </svg>
    
    <!-- Buttons and mascot -->
    <div class="cta-row">
        <a asp-controller="Home" asp-action="TakeQuiz" class="btn-cta">Take Quiz!</a>
        <div class="mascot-wrap">
            <img src="~/images/quizzy-blueberry.png" alt="Quizzy Pop mascot" class="mascot" />
            <div class="speech">Let's play and learn together!</div>
        </div>
        <a asp-controller="Home" asp-action="CreateQuiz" class="btn-cta">Make Quiz!</a>
    </div>
</section>

<style>
/* Index Page Hero Section */
.home-hero {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.arc-title {
    width: min(900px, 95vw);
    margin: var(--qp-space-lg) auto 0;
    display: block;
    position: relative;
    z-index: 2;
}

.arc-text {
    font-weight: 800;
    font-family: var(--qp-font-special);
    font-size: clamp(28px, 6vw, 56px);
    letter-spacing: 8px;
    fill: var(--qp-primary);
    paint-order: stroke;
    stroke:  var(--qp-white);
    stroke-opacity: 0.35;
    stroke-width: 5px;
}

/* Layout for buttons and mascot */
.cta-row {
    position: relative;
    z-index: 2;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--qp-space-xl);
    align-items: center;
    justify-items: center;
    margin-top: var(--qp-space-xl);
    padding: 0 var(--qp-space-lg);
    width: 100%;
    max-width: 1400px;
}

/* Mascot & Speech Bubble */
.mascot-wrap {
    position: relative;
    justify-self: center;
    align-self: end;
    display: flex;
    justify-content: center;
    align-items: center;
}

.mascot {
    width: min(575px, 70vw);
    height: auto;
    filter: drop-shadow(0 10px 0 rgba(0,0,0,.15));
    display: block;
}

.speech {
    position: absolute;
    right: -140px;
    top: var(--qp-space-xl);
    font-family: var(--qp-font-main);
    max-width: 260px;
    background: var(--qp-white);
    padding: var(--qp-space-sm) var(--qp-space-md);
    border-radius: var(--qp-radius-lg);
    font-weight: 700;
    box-shadow: var(--qp-shadow-md);
}

.speech::after {
    content: "";
    position: absolute;
    left: -16px;
    top: 38px;
    width: 0;
    height: 0;
    border: 12px solid transparent;
    border-right-color: var(--qp-white);
    transform: rotate(20deg);
}

/* Call-to-Action Buttons */
.btn-cta {
    position: relative;
    z-index: 2;
    display: inline-block;
    font-size: clamp(18px, 2.2vw, 24px);
    font-weight: 800;
    text-decoration: none;
    padding: var(--qp-space-lg) var(--qp-space-xl);
    color: var(--qp-white);
    background: var(--qp-primary);
    border-radius: var(--qp-radius-full);
    box-shadow: 0 9px 0 var(--qp-primary-dark), 0 0 0 4px var(--qp-white) inset;
    transition: transform .05s ease-in-out;
    text-align: center;
    font-family: var(--qp-font-main);
}

.btn-cta:hover {
    transform: translateY(4px);
    box-shadow: 0 5px 0 var(--qp-primary-dark), 0 0 0 4px var(--qp-white) inset;
}

/* Responsive adjustments */
@@media (max-width: 768px) {
    .cta-row {
        grid-template-columns: 1fr;
        gap: var(--qp-space-lg);
    }
    
    .speech {
        right: auto;
        left: 50%;
        transform: translateX(-50%);
        top: -80px;
    }
    
    .speech::after {
        left: 50%;
        transform: translateX(-50%) rotate(90deg);
        top: auto;
        bottom: -20px;
        border-right-color: transparent;
        border-top-color: var(--qp-white);
    }
}
</style>