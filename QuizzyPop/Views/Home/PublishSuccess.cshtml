@{
    ViewData["Title"] = "Quiz Published";
}
@model QuizzyPop.ViewModels.QuizMetaDataViewModel

<section class="qp-publish-success">
  <div class="qp-publish__header">
    <h1>ðŸŽ‰ Success!</h1>
    <p>Your quiz has been published.</p>
  </div>

  <!-- Mascot -->
  <div class="qp-publish__mascot">
    <img src="~/images/QuizzyBlueberry.png" alt="Happy blueberry mascot" />
  </div>

  <!-- Quiz preview card -->
  <article class="qp-quiz-card">
    <header>
      <h2>@Model.Title</h2>
      <p class="qp-quiz__desc">@Model.Description</p>
    </header>
    <div class="qp-quiz__meta">
      <span><strong>@Model.QuestionCount</strong> Questions</span>
      <span>Difficulty: @Model.Difficulty</span>
      <span>Tags: 
        @foreach(var tag in Model.Tags)
        {
            <span class="qp-tag">@tag</span>
        }
      </span>
    </div>
  </article>

  <!-- Actions -->
  <div class="qp-publish__actions">
    <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id" class="qp-btn qp-btn--primary">View Quiz</a>
    <a asp-controller="Home" asp-action="Index" class="qp-btn">Back to Quizzes</a>
  </div>
</section>
