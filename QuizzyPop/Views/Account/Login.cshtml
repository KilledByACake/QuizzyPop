@{
    ViewData["Title"] = "Log In";
}

<section class="login-page">
    <div class="clouds" aria-hidden="true">
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
    </div>

    <div class="login-container">
        <img src="~/images/QuizzyBlueberry.png" alt="Quizzy Pop mascot" class="login-mascot" />
        <h1>Welcome Back!</h1>
        <p class="subtitle">Log in!</p>

        <form class="login-form" method="post">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" id="email" name="email" required placeholder="you@example.com" />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" required placeholder="••••••••" />
            </div>

            <button type="submit" class="btn-primary">Log In</button>

            <p class="footer-text">
                Don’t have an account? <a asp-controller="Account" asp-action="Register">Sign up!</a>
            </p>
        </form>
    </div>
</section>

<style>
/* === Base layout === */
.login-page {
    background: #d9f1ff;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    font-family: 'Baloo 2', system-ui, sans-serif;
}

/* === Clouds === */
.clouds { position: absolute; inset: 0; overflow: hidden; z-index: 0; }
.cloud {
    position: absolute;
    background: #fff;
    border-radius: 50%;
    opacity: 0.85;
    box-shadow: 10px 10px 0 rgba(0,0,0,0.05);
}
.cloud:nth-child(1){ width:200px; height:100px; top:15%; left:5%; }
.cloud:nth-child(2){ width:250px; height:120px; top:60%; left:60%; }
.cloud:nth-child(3){ width:180px; height:90px; top:75%; left:20%; }

/* === Login card === */
.login-container {
    position: relative;
    z-index: 1;
    background: #fff;
    border-radius: 2rem;
    padding: 2.5rem 3rem;
    width: 100%;
    max-width: 460px;
    box-shadow: 0 10px 30px rgba(15, 118, 110, 0.25);
    text-align: center;
}

.login-mascot {
    width: 200px;
    height: auto;
    margin-bottom: 0.5rem;
}

h1 {
    color: #004b74;
    font-size: 2.2rem;
    margin-bottom: 0.25rem;
}

.subtitle {
    color: #ff9900;
    font-weight: 700;
    margin-bottom: 2rem;
}

/* === Form === */
.login-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    text-align: left;
}

.form-group label {
    font-weight: 700;
    color: #004b74;
    font-size: 1rem;
}

.form-group input {
    width: 100%;
    padding: 0.8rem 1rem;
    border: 3px solid #0f766e;
    border-radius: 999px;
    font-size: 1rem;
    outline: none;
    transition: 0.2s;
}

.form-group input:focus {
    border-color: #ff9900;
    background: #fffef7;
}

/* === Button === */
.btn-primary {
    margin-top: 0.5rem;
    background: #0f766e;
    color: white;
    font-weight: 800;
    font-size: 1.1rem;
    border: none;
    border-radius: 999px;
    padding: 0.9rem 2rem;
    box-shadow: 0 5px 0 #0b5c55;
    cursor: pointer;
    transition: transform 0.15s ease;
}
.btn-primary:hover {
    transform: translateY(-2px);
    filter: brightness(1.1);
}

/* === Footer text === */
.footer-text {
    margin-top: 1.2rem;
    color: #374151;
    text-align: center;
    font-size: 1rem;
}
.footer-text a {
    color: #ff9900;
    text-decoration: none;
    font-weight: 700;
}
.footer-text a:hover {
    text-decoration: underline;
}
</style>
