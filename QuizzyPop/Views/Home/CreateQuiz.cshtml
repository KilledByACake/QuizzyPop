@model QuizzyPop.ViewModels.QuizMetaDataViewModel
@{
    ViewData["Title"] = "Create Quiz";
}

<section class="create-quiz-page">
    <div class="clouds" aria-hidden="true">
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
    </div>

    <div class="title-row">
        <h1>Create new Quiz</h1>
    </div>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <div class="cq-grid">
            <!-- Box 1: Quiz Details -->
            <div class="card quiz-details">
                @await Html.PartialAsync("_QuizMetaData", Model)
            </div>
            <!-- Box 2: Questions -->
            <div class="card questions-box">
                <h2>Questions</h2>
                <div id="questions" class="stack">
                    @if (Model.Questions != null && Model.Questions.Count > 0)
                    {
                        @for (int i = 0; i < Model.Questions.Count; i++)
                        {
                            @await Html.PartialAsync("_QuizQuestion", Model.Questions[i])
                        }
                    }
                    else
                    {
                        <p>No questions yet. Click "Add question" to start!</p>
                    }
                </div>
                <div class="add-question-container">
                    <button type="button" id="addQuestionBtn" class="btn btn-outline-primary">
                        + Add question
                    </button>
                </div>
            </div>
            <!-- Box 3: Actions/Sidebar -->
            <aside class="card sidebar">
                <h2>Actions</h2>
                <div class="toggles">
                    @* Add your slider switches/toggles here *@
                </div>
                <div class="publish-bottom">
                    <button type="submit" name="action" value="save" class="btn btn-save">Save</button>
                    <button type="submit" name="action" value="publish" class="btn btn-publish">Publish</button>
                </div>
            </aside>
        </div>
    </form>
</section>

<template id="question-template">
  <div class="card question-card" data-index="__INDEX__">
    <!-- Question template content here -->
  </div>
</template>

@section Scripts {
    @* Your JavaScript for adding questions goes here *@
}
