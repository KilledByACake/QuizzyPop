@model List<QuizzyPop.ViewModels.QuizMetaDataViewModel>
@{
    ViewData["Title"] = "Take Quiz";
}

<section class="take-quiz-page">
    <!-- ================= PAGE TITLE ================= -->
    <div class="title-row">
        <h1>Explore Quizzes</h1>
    </div>

    <div class="tq-grid">
        <!-- LEFT: filters and search -->
        <div class="filter-col">
            <div class="filter-bar">
                <input class="search-input" type="search" placeholder="Search by keyword or topic..."
                    aria-label="Search quizzes" />

                <!-- Custom dropdown filters -->
                <div class="dropdown-row">
                    <!-- Category -->
                    <div class="dropdown">
                        <button class="dropdown-btn">Category ▼</button>
                        <ul class="dropdown-menu">
                            <li>Science</li>
                            <li>History</li>
                            <li>Geography</li>
                        </ul>
                    </div>

                    <!-- Grade -->
                    <div class="dropdown">
                        <button class="dropdown-btn">Grade Level ▼</button>
                        <ul class="dropdown-menu">
                            <li>1–4</li>
                            <li>5–7</li>
                            <li>8–10</li>
                        </ul>
                    </div>

                    <!-- Sort by  -->
                    <div class="dropdown">
                        <button class="dropdown-btn">Popular ▼</button>
                        <ul class="dropdown-menu">
                            <li>Newest</li>
                            <li>Oldest</li>
                            <li>Most Played</li>
                        </ul>
                    </div>

                    <!-- Difficulty -->
                    <div class="dropdown">
                        <button class="dropdown-btn">Difficulty ▼</button>
                        <ul class="dropdown-menu">
                            <li>Easy</li>
                            <li>Medium</li>
                            <li>Hard</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT: quiz grid -->
        <div class="quiz-col">
            <div class="quiz-grid">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var quiz in Model)
                    {
                        <article class="quiz-card">
                            <div class="quiz-thumb"></div>
                            <h3 class="quiz-title">@quiz.Title</h3>
                            <p class="quiz-meta">Difficulty: @quiz.Difficulty</p>
                            <p class="quiz-meta">@((quiz.Questions?.Count ?? 0)) Questions</p>

                            <a class="btn-take" asp-controller="Home" asp-action="StartQuiz" asp-route-id="@quiz.Title">
                                Take quiz
                            </a>
                        </article>
                    }
                }
                else
                {
                    <p class="no-quizzes">No quizzes available right now.</p>
                }
            </div>
        </div>
    </div>
</section>

<!-- ===================== STYLES ===================== -->
<style>
    .take-quiz-page {
        /* background: #d9f1ff; */
        min-height: 80vh;
        padding: 2.5rem 3rem;
    }

    /* === Title === */
    .title-row h1 {
        font-family: 'Baloo 2', system-ui, sans-serif;
        font-size: 2.2rem;
        font-weight: 800;
        color: #1f2937;
        margin-bottom: 1.5rem;
    }

    /* === Layout grid === */
    .tq-grid {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    /* === Search and filters === */
    .filter-bar {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .search-input {
        flex: 1;
        min-width: 280px;
        height: 48px;
        border: 3px solid #0F766E;
        border-radius: 999px;
        padding: 0 18px;
        outline: none;
        background: #fff;
        font-size: 16px;
        font-family: 'Baloo 2', system-ui, sans-serif;
    }

    .dropdown-row {
        display: flex;
        flex-wrap: wrap;
        gap: 14px;
    }

    /* === Dropdowns === */
    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-btn {
        background: #fff;
        border: 3px solid #0F766E;
        border-radius: 999px;
        padding: 10px 22px;
        font-weight: 700;
        font-family: 'Baloo 2', system-ui, sans-serif;
        font-size: 16px;
        cursor: pointer;
        color: #1f2937;
        transition: all 0.2s ease;
    }

    .dropdown-btn:hover {
        background: #fffaf3;
    }

    .dropdown.open .dropdown-btn {
        background: #ffecb3;
    }

    .dropdown-menu {
        display: none;
        position: absolute;
        top: 110%;
        left: 0;
        background: #fff;
        border-radius: 14px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        list-style: none;
        padding: 8px 0;
        margin: 0;
        min-width: 180px;
        z-index: 10;
        font-family: 'Baloo 2', system-ui, sans-serif;
        font-size: 15px;
    }

    .dropdown.open .dropdown-menu {
        display: block;
    }

    .dropdown-menu li {
        padding: 10px 18px;
        cursor: pointer;
        font-weight: 600;
        color: #1f2937;
        transition: background 0.15s ease, color 0.15s ease;
    }

    .dropdown-menu li:hover {
        background: #fff6e5;
        color: #d97706;
    }

    /* === Quiz grid === */
    .quiz-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 28px;
    }

    .quiz-card {
        background: #fff;
        border-radius: 16px;
        padding: 18px;
        text-align: center;
        box-shadow: 0 8px 18px rgba(0, 0, 0, .08);
        transition: transform .15s ease, box-shadow .15s ease;
    }

    .quiz-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 26px rgba(0, 0, 0, .12);
    }

    .quiz-thumb {
        height: 140px;
        border-radius: 12px;
        background: #e5e7eb;
        margin-bottom: 14px;
    }

    .quiz-title {
        font-family: 'Baloo 2', system-ui, sans-serif;
        font-size: 22px;
        font-weight: 800;
        margin: 6px 0 4px;
        color: #111827;
    }

    .quiz-meta {
        margin: 0;
        color: #6b7280;
        font-size: 14px;
    }

    .btn-take {
        display: inline-block;
        margin-top: 12px;
        padding: 12px 20px;
        border-radius: 24px;
        background: #0F766E;
        color: #fff;
        text-decoration: none;
        font-weight: 800;
        box-shadow: 0 4px 0 #034943;
        font-family: 'Baloo 2', system-ui, sans-serif;
        font-size: 16px;
    }

    .btn-take:hover {
        filter: brightness(1.05);
    }

    .no-quizzes {
        color: #374151;
        font-weight: 600;
        font-family: 'Baloo 2', system-ui, sans-serif;
    }
</style>

<!-- ===================== SCRIPTS ===================== -->
<script>
    // === Dropdown open/close toggle ===
    document.querySelectorAll('.dropdown-btn').forEach(btn => {
        btn.addEventListener('click', e => {
            const parent = e.currentTarget.parentElement;
            document.querySelectorAll('.dropdown').forEach(d => {
                if (d !== parent) d.classList.remove('open');
            });
            parent.classList.toggle('open');
        });
    });

    // === Close dropdown when clicking outside ===
    document.addEventListener('click', e => {
        if (!e.target.closest('.dropdown')) {
            document.querySelectorAll('.dropdown').forEach(d => d.classList.remove('open'));
        }
    });
</script>