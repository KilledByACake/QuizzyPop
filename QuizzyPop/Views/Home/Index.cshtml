@{
    ViewData["Title"] = "Quizzy Pop Home";
}

<section class="home-hero">

    <!-- Clouds background -->
    <div class="clouds" aria-hidden="true">
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
        <div class="cloud"></div>
    </div>


    <!-- Decorative curved title -->
    <svg class="arc-title" viewBox="0 0 900 280" aria-hidden="true" width="900" height="280">
        <defs>
            <!--  curve the text will follow -->
            <path id="titlePath" d="M80,220 C300,40 600,40 820,220" />
        </defs>
        <text class="arc-text" style="font-size: 2.2rem;">
            <textPath href="#titlePath" startOffset="50%" text-anchor="middle">
                WELCOME TO QUIZZY POP!
            </textPath>
        </text>
    </svg>

    <!-- Buttons and mascot -->
    <div class="cta-row">
        <a class="btn-cta" asp-controller="Home" asp-action="TakeQuiz">Take Quiz!</a>
        <div class="mascot-wrap">
            <img src="~/images/QuizzyBlueberry.png" alt="Quizzy Pop mascot" class="mascot" />
            <div class="speech">Let’s play and learn together!</div>
        </div>
        <a class="btn-cta" asp-controller="Home" asp-action="Create">Make Quiz!</a>
    </div>
</section>