@model List<QuizzyPop.ViewModels.QuizQuestionViewModel>
@{
    ViewData["Title"] = "Edit Quiz";
}

<section class="edit-quiz-page">
    <div class="edit-quiz-header">
        <h1>Edit Quiz</h1>
    </div>

    <div class="edit-quiz-card">
        <form class="edit-quiz-form" asp-action="EditQuiz" method="post">
            <!-- Questions Section -->
            <div id="questions">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="question-card">
                        <div class="question-header">
                            <h3>Question @(i + 1)</h3>
                            <div class="question-controls">
                                <button type="button" class="move-up-btn" title="Move up">↑</button>
                                <button type="button" class="move-down-btn" title="Move down">↓</button>
                                <button type="button" class="remove-question-btn" title="Remove">×</button>
                            </div>
                        </div>

                        <div class="edit-form-group">
                            <label>Question Text</label>
                            <textarea asp-for="@Model[i].Text" class="edit-form-input" rows="3"></textarea>
                        </div>

                        <div class="edit-form-group">
                            <label>Answer Options</label>
                            <div class="options-container">
                                @for (int j = 0; j < Model[i].Choices.Count; j++)
                                {
                                    <div class="option-row @(j == Model[i].CorrectAnswerIndex ? "correct-option" : "")">
                                        <input asp-for="@Model[i].Choices[j]" class="edit-form-input" />
                                        @if (j == Model[i].CorrectAnswerIndex)
                                        {
                                            <span class="correct-badge">✓</span>
                                        }
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="edit-form-group half">
                                <label asp-for="@Model[i].Points">Points</label>
                                <input asp-for="@Model[i].Points" type="number" class="edit-form-input" min="1" max="100" />
                            </div>
                            <div class="edit-form-group half">
                                <label asp-for="@Model[i].TimeLimit">Time Limit (seconds)</label>
                                <input asp-for="@Model[i].TimeLimit" type="number" class="edit-form-input" min="0" />
                                <span class="form-hint">0 = no time limit</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="add-question-container">
                <button type="button" id="addQuestionBtn" class="btn-add">+ Add Question</button>
            </div>

            <div class="edit-button-row">
                <a asp-action="Index" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-save">Save Changes</button>
            </div>
        </form>
    </div>
</section>

<style>
.edit-quiz-page {
    padding: var(--qp-space-xl) var(--qp-space-lg);
    max-width: 800px;
    margin: 0 auto;
}

.edit-quiz-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: var(--qp-space-xl);
}

.edit-quiz-header h1 {
    color: var(--qp-blue);
    font-size: 2.2rem;
    margin: var(--qp-space-sm) 0;
    font-family: var(--qp-font-special);
}

.edit-quiz-card {
    background: var(--qp-white);
    border-radius: var(--qp-radius-lg);
    padding: var(--qp-space-xl);
    box-shadow: var(--qp-shadow-md);
    margin-bottom: var(--qp-space-lg);
}

.edit-quiz-form {
    display: flex;
    flex-direction: column;
    gap: var(--qp-space-lg);
}

.edit-form-group {
    margin-bottom: var(--qp-space-lg);
}

.edit-form-group label {
    display: block;
    margin-bottom: var(--qp-space-xs);
    font-weight: 600;
    color: var(--qp-deep);
    font-family: var(--qp-font-main);
}

.edit-form-input {
    width: 100%;
    padding: var(--qp-space-sm);
    border: 2px solid var(--qp-gray-200);
    border-radius: var(--qp-radius-md);
    font-family: var(--qp-font-main);
    font-size: 1rem;
    transition: border-color 0.2s;
}

.edit-form-input:focus {
    outline: none;
    border-color: var(--qp-primary);
}

.edit-button-row {
    display: flex;
    justify-content: space-between;
    gap: var(--qp-space-md);
    margin-top: var(--qp-space-xl);
}

.btn-save {
    font-family: var(--qp-font-main);
    font-weight: 700;
    font-size: 1rem;
    border: none;
    border-radius: var(--qp-radius-full);
    padding: var(--qp-space-md) var(--qp-space-xl);
    cursor: pointer;
    transition: transform 0.2s;
    background: var(--qp-deep);
    color: var(--qp-white);
    box-shadow: 0 4px 0 var(--qp-deep-dark);
}

.btn-save:hover {
    transform: translateY(-2px);
}

.btn-cancel {
    font-family: var(--qp-font-main);
    font-weight: 700;
    font-size: 1rem;
    border: none;
    border-radius: var(--qp-radius-full);
    padding: var(--qp-space-md) var(--qp-space-xl);
    cursor: pointer;
    transition: transform 0.2s;
    background: var(--qp-gray-400);
    color: var(--qp-white);
}

.btn-cancel:hover {
    transform: translateY(-2px);
}

/* Question Card Styles */
.question-card {
    border: 2px solid var(--qp-gray-200);
    border-radius: var(--qp-radius-lg);
    padding: var(--qp-space-lg);
    margin-bottom: var(--qp-space-lg);
}

.question-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--qp-space-lg);
    padding-bottom: var(--qp-space-sm);
    border-bottom: 1px solid var(--qp-gray-200);
}

.question-controls {
    display: flex;
    gap: 0.5rem;
}

/* Control Buttons */
.move-up-btn, 
.move-down-btn,
.remove-question-btn {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 16px;
    border: none;
    border-radius: var(--qp-radius-md);
    color: var(--qp-white);
    cursor: pointer;
    transition: all 0.2s ease;
}

.move-up-btn:not(:disabled), 
.move-down-btn:not(:disabled) {
    background: var(--qp-success);
}

.move-up-btn:disabled, 
.move-down-btn:disabled {
    background: var(--qp-gray-300);
    cursor: not-allowed;
}

.remove-question-btn {
    background: var(--qp-error);
}

/* Options Container */
.options-container {
    display: flex;
    flex-direction: column;
    gap: var(--qp-space-md);
}

.option-row {
    position: relative;
}

.correct-option input {
    border-color: var(--qp-success);
}

.correct-badge {
    position: absolute;
    right: var(--qp-space-md);
    top: 50%;
    transform: translateY(-50%);
    color: var(--qp-success);
}

/* Add Question Button */
.add-question-container {
    text-align: center;
    margin: var(--qp-space-xl) 0;
}

.btn-add {
    font-family: var(--qp-font-main);
    font-weight: 700;
    font-size: 1rem;
    border: 2px solid var(--qp-primary);
    border-radius: var(--qp-radius-full);
    padding: var(--qp-space-md) var(--qp-space-xl);
    color: var(--qp-primary);
    background: transparent;
    cursor: pointer;
    transition: all 0.2s;
}

.btn-add:hover {
    background: var(--qp-primary);
    color: var(--qp-white);
}

/* Form Row */
.form-row {
    display: flex;
    gap: var(--qp-space-lg);
    margin-bottom: var(--qp-space-lg);
}

.form-hint {
    display: block;
    color: var(--qp-gray-500);
    font-size: 0.875rem;
    margin-top: var(--qp-space-xs);
}

@@media (max-width: 768px) {
    .edit-quiz-page {
        padding: var(--qp-space-lg) var(--qp-space-md);
    }

    .edit-quiz-card {
        padding: var(--qp-space-lg);
    }

    .edit-button-row {
        flex-direction: column-reverse;
    }

    .btn-save,
    .btn-cancel {
        width: 100%;
    }
}
</style>